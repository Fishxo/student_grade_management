   <style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 20px;
        color: #333;
    }

    h2 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 30px;
    }

    .course-list {
        max-width: 600px;
        margin: 0 auto;
        padding: 0;
        list-style: none;
    }

    .course-item {
        background-color: #fff;
        margin-bottom: 15px;
        padding: 15px 20px;
        border-radius: 10px;
        box-shadow: 0 3px 6px rgba(0,0,0,0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .course-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 10px rgba(0,0,0,0.15);
    }

    .course-info {
        display: flex;
        flex-direction: column;
    }

    .course-title {
        font-weight: bold;
        font-size: 1.1em;
    }

    .course-code {
        background-color: #3498db;
        color: #fff;
        padding: 3px 7px;
        border-radius: 5px;
        font-size: 0.9em;
        margin-top: 5px;
        width: fit-content;
    }

    .edit-btn button {
        background-color: #f39c12;
        border: none;
        color: #fff;
        padding: 5px 10px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.9em;
        transition: background 0.2s;
    }
    .delet-btn button {
        background-color: #f39c12;
        border: none;
        color: #fff;
        padding: 5px 10px;
        border-radius: 6px;
        cursor: pointer;
        font-size: 0.9em;
        transition: background 0.2s;
    }

    .edit-btn button:hover {
        background-color: #e67e22;
    }
</style>

<body>
    <h2>Here are students courses for <%= dept.deptName %> department</h2>
    <ul class="course-list">
        <% fetchcours.forEach(f => { %>
            <li class="course-item">
                <div class="course-info">
                    <span class="course-title"><%= f.courseTitle %></span>
                    <span class="course-code"><%= f.courseCode %></span>
                </div>
                <div class="edit-btn">
                    <form action="/Cedit/<%= dept._id%>/<%= f._id %>/course" method="get">
                        <button>✏️ Edit</button>
                    </form>
                </div>
                <div class="delet-btn">
                    <form action="/deptc/<%= dept._id%>/<%= f._id%>/delete" method="post">
                        <button onclick="return confirm('Are you sure you want to delete this course?')">delete</button>
                    </form>
                </div>
                
            </li>
        <% }) %>
    </ul>
</body>


</html>