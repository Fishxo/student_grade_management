<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * /* Reset and base styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

body {
  height: 100vh;
  display: flex;
  flex-direction: column; /* stack items vertically */
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #6a11cb, #2575fc);
  padding: 20px;
  gap: 15px; /* space between heading and form card */
}


.card {
  background: white;
  padding: 25px 30px;
  width: 350px;
  border-radius: 12px;
  box-shadow: 0 10px 25px rgba(0,0,0,0.15);

  display: flex;
  flex-direction: column;  /* stack inputs vertically */
  gap: 15px;               /* space between each input group */
}

/* Each label + input pair spacing */
.card label {
  font-weight: 600;
  font-size: 14px;
  color: #555;
}

/* Inputs full width */
.card input {
  width: 100%;
  padding: 10px;
  font-size: 14px;
  border: 1px solid #ccc;
  border-radius: 6px;
  transition: 0.3s;
}

.card input:focus {
  border-color: #2575fc;
  outline: none;
  box-shadow: 0 0 0 3px rgba(37,117,252,0.2);
}

/* Button styling */
.card button {
  padding: 12px;
  border: none;
  border-radius: 8px;
  background: #2575fc;
  color: white;
  font-size: 15px;
  cursor: pointer;
  transition: 0.3s ease;
}

.card button:hover {
  background: #1e5fd1;
  transform: translateY(-2px);
}


    </style>

</head>
<body>
   
  <div class="cardd"><h3>hello admin, welcome to signup form</h3></div>
<div class="card">
  <form action="/adminSIGN" method="post" id="adminForm">
    <label>admin first name</label>
    <input type="text" name="adminFirstname" required>

    <label>admin second name</label>
    <input type="text" name="adminSecondname" required>

    <label>admin email</label>
    <input type="email" name="adminEmail">

    <label>admin password</label>
    <input type="password" name="adminPassword" required>

    <button type="submit">submit</button>
  </form>
</div>

    <script>
document.getElementById("adminForm").addEventListener("submit", function(e) {
  const fname = document.querySelector('[name="adminFirstname"]').value.trim();
  const sname = document.querySelector('[name="adminSecondname"]').value.trim();
  const email = document.querySelector('[name="adminEmail"]').value.trim();
  const password = document.querySelector('[name="adminPassword"]').value.trim();

  if (fname.length < 2) {
    alert("First name must be at least 2 characters");
    e.preventDefault();
    return;
  }

  if (sname.length < 2) {
    alert("Second name must be at least 2 characters");
    e.preventDefault();
    return;
  }

  const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  if (!emailPattern.test(email)) {
    alert("Enter a valid email");
    e.preventDefault();
    return;
  }

  if (password.length < 6) {
    alert("Password must be at least 6 characters");
    e.preventDefault();
    return;
  }
});
</script>

</body>
</html>