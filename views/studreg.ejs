<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

body {
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, #6a11cb, #2575fc);
    padding: 40px;
}

.container {
    background: #fff;
    padding: 40px 35px;
    width: 450px;
    border-radius: 16px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    text-align: center;
}

h2 {
    margin-bottom: 25px;
    color: #2575fc;
    font-size: 22px;
}

label {
    display: block;
    text-align: left;
    font-weight: 600;
    margin-bottom: 5px;
    color: #555;
}

input {
    width: 100%;
    padding: 10px;
    margin-bottom: 18px;
    border: 1px solid #ccc;
    border-radius: 8px;
    transition: 0.3s;
}

input:focus {
    border-color: #2575fc;
    outline: none;
    box-shadow: 0 0 0 3px rgba(37, 117, 252, 0.2);
}

button {
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 8px;
    background: #2575fc;
    color: white;
    font-size: 15px;
    cursor: pointer;
    transition: 0.3s ease;
}

button:hover {
    background: #1e5fd1;
    transform: translateY(-2px);
}

    </style>
</head>
<body>
        <div class="container">
    <h2>Register Student</h2>

    <form action="/studreg" id="studentForm" method="post">
        
    <label for="studFname">Student First Name</label>
    <input type="text" id="studFname" name="studFname" required>

    <label for="studSname">Student Second Name</label>
    <input type="text" id="studSname" name="studSname" required>

    <label for="studEmail">Student Email</label>
    <input type="email" id="studEmail" name="studEmail" required>
    
    <label for="studPassword">Student Password</label>
    <input type="text" id="studPassword" name="studPassword" required>

    <label for="studDept">Student Department</label>
    <input type="text" id="studDept" name="studDept" required>

    <label for="studyBatch">Study Batch</label>
    <input type="text" id="studyBatch" name="studyBatch" required>

    <button type="submit">Submit</button>
</form>

<script>
document.getElementById('studentForm').addEventListener('submit', function(e) {
    e.preventDefault(); // stop submission

    const fname = document.getElementById('studFname').value.trim();
    const sname = document.getElementById('studSname').value.trim();
    const email = document.getElementById('studEmail').value.trim();
    const password = document.getElementById('studPassword').value.trim();
    const dept = document.getElementById('studDept').value.trim();
    const batch = document.getElementById('studyBatch').value.trim();

    if(fname.length < 2) { alert('First name must be at least 2 characters'); return; }
    if(sname.length < 2) { alert('Second name must be at least 2 characters'); return; }

    const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if(!emailPattern.test(email)) { alert('Enter a valid email'); return; }

    if(password.length < 6) { alert('Password must be at least 6 characters'); return; }
    if(dept.length < 2) { alert('Department must be at least 2 characters'); return; }
    if(batch.length < 1) { alert('Batch cannot be empty'); return; }

    this.submit(); // submit if all ok
});
</script>



</body>
</html>